{
  "name": "miccy-lynx-playground",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome lint .",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "biome format --write .",
    "check": "biome check --apply ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@turbo/gen": "^2.4.4",
    "@types/bun": "latest",
    "markdownlint": "^0.37.4",
    "markdownlint-cli": "^0.44.0",
    "turbo": "latest",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.4"
}
